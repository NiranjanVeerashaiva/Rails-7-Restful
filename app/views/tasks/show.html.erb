<%= turbo_frame_tag "show_task_details" do %>
  <div data-controller="show">
    <div id="show-modal" data-turbo-temporary="true" tabindex="-1" class="hidden flex items-center justify-center overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full bg-blue-100 bg-opacity-70">
      <div class="relative p-4 w-[800px] max-h-full">
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700 px-3 pb-7">
          <div class="flex items-center justify-between border-b-2 border-heading-border pb-2 -mx-3 px-4 py-4 rounded-t dark:border-gray-600 mb-2">
            <h2 class="text-2xl text-font-black" id=""><%= @task.title %></h2>
            <button type="button" class="text-gray-400 bg-transparent rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center"  id="close_show_modal">
              <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
              </svg>
              <span class="sr-only" id="">Close modal</span>
            </button>
          </div>
          <div class="bg-white p-6 rounded-2xl shadow-lg border border-gray-300 max-w-lg mx-auto mt-6">
            <h4 class="text-xl font-semibold text-gray-800 mb-2">
              <span class="text-blue-600">Title:</span> <%= @task.title %>
            </h4>
            <p class="text-gray-700 mb-2">
              <span class="font-semibold text-gray-900">Desc:</span> <%= @task.description %>
            </p>
            <p class="text-gray-700">
              <span class="font-semibold text-gray-900">Status:</span> 
              <span class="<%= @task.status == 'completed' ? 'text-green-600' : 'text-yellow-600' %>">
                <%= @task.status.capitalize %>
              </span>
            </p>
          </div>        
        </div>
      </div>
    </div>
  </div>
<% end %>